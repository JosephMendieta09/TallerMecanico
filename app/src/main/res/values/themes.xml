
<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.TallerMecanico" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_color</item>
    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorSecondary">@color/secondary_color</item>
    <item name="colorSecondaryVariant">@color/secondary_color</item>
    <item name="colorOnSecondary">@android:color/black</item>
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
</style>

<!-- Theme sin ActionBar para HomeActivity -->
<style name="Theme.TallerMecanico.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
</resources>
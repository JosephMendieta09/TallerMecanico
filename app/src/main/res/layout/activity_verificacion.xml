<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificacionActivity"
    android:background="@drawable/salar">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:textSize="45sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/chonky"
            android:text="@string/tvVerification" />

        <ImageView
            android:id="@+id/imgVeri"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:contentDescription="@string/imgVeri"
            app:srcCompat="@drawable/verificacion" />

        <TextView
            android:id="@+id/tvRecibido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/chonky"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtEmail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:autofillHints="10"
            android:background="@drawable/edttext"
            android:drawableStart="@drawable/mail"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:padding="15dp"
            android:textColorHint="#A5000000"
            android:textSize="16sp"
            android:hint="@string/edtEmail2"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/primary_color"
            android:fontFamily="@font/roboto"
            android:padding="14dp"
            android:textSize="18sp"
            android:text="@string/btnSend" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>